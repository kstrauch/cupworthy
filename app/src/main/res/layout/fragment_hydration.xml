<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="com.jam.ksm.cupworthy.hydrationFragment">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="You are dehydrated"
            android:textSize="60px"
            android:gravity="center"
            android:id="@+id/hydrationText"
            android:layout_gravity="center_horizontal|top" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="You need to drink 3 glasses of water to stay hydrated."
            android:id="@+id/howManyGlassesNeeded"
            android:layout_gravity="center" />
        </LinearLayout>


    <Button
        android:layout_marginTop="100dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:id="@+id/drinkAGlass"
        android:text="+1 Glass"/>

    <ImageView
        android:layout_width="74dp"
        android:layout_height="71dp"
        android:id="@+id/plus_sign"
        android:visibility="invisible"
        android:src="@drawable/plus_sign"
        android:layout_gravity="center_vertical|right" />

    <LinearLayout
        android:layout_margin="10dp"
        android:layout_width="fill_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:id="@+id/linear_layout"
        android:layout_gravity="center">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/glass1"
            android:layout_gravity="bottom"
            android:visibility="invisible"
            android:src="@drawable/glass_water" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/glass2"
            android:layout_gravity="bottom"
            android:visibility="invisible"
            android:src="@drawable/glass_water" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/glass3"
            android:visibility="invisible"
            android:src="@drawable/glass_water" />

    </LinearLayout>


</FrameLayout>
