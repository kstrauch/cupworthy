<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="com.jam.ksm.cupworthy.drinkFragment">


    <ImageButton
        android:layout_width="130dp"
        android:layout_height="171dp"
        android:id="@+id/imageButtonBeer"
        android:src="@drawable/keystone"
        android:background="?android:attr/selectableItemBackground"
        android:layout_gravity="left|bottom" />

    <ImageButton
        android:layout_width="83dp"
        android:layout_height="114dp"
        android:id="@+id/imageButtonShot"
        android:src="@drawable/shot"
        android:background="?android:attr/selectableItemBackground"
        android:layout_gravity="right|bottom" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButtonWine"
        android:src="@drawable/red_wine"
        android:background="?android:attr/selectableItemBackground"
        android:layout_gravity="left|top"
        android:layout_marginLeft="20dp" />

    <ImageButton
        android:layout_width="141dp"
        android:layout_height="137dp"
        android:id="@+id/imageButtonIce"
        android:background="?android:attr/selectableItemBackground"
        android:src="@drawable/smirnoff_ice"
        android:layout_gravity="right|top" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButtonRedCup"
        android:src="@drawable/redcup"
        android:gravity="center"
        android:background="?android:attr/selectableItemBackground"
        android:layout_gravity="center" />

</FrameLayout>
